{
  "name": "anytomarkdown",
  "version": "1.0.0",
  "description": "Convert various document formats to Markdown using Cloudflare Workers AI",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:worker": "npm run dev --workspace=packages/worker",
    "dev:web": "npm run dev --workspace=packages/web",
    "dev": "npm-run-all --parallel dev:*",
    "build": "npm run build --workspaces",
    "deploy:worker": "npm run deploy --workspace=packages/worker",
    "deploy": "npm run build && npm run deploy:worker"
  },
  "keywords": [
    "markdown",
    "document-conversion",
    "cloudflare-workers",
    "ai"
  ],
  "author": "AnyToMarkdown Contributors",
  "license": "MIT",
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=18"
  }
} 